@{ if (WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu != null)
    {

        <div> имя @WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu.name  пароль @WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu.id</div>


        foreach (WebApplication1.Models.driver_data bliki in WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu.bloki)
        {
            <div><b>@bliki.zagolow</b></div>
            <div>@bliki.iner_data</div>
        }

        <form asp-controller="DRIVER_DATA_BASE" asp-action="add_driver_data" asp-route-data="@WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu.name" method="post">

            <input class="bloc_out" name="ima" type="text" value="ТЕКСТ_БЛОКА" size="30">
            <textarea class="bloc_out" name="text" cols="40" rows="5"></textarea>
            <input hidden name="remuve" type="text" value="false" size="19">
            <input class="bloc_out" type="submit" value="ДОБАВИТЬ">
        </form>

        //история координат курьера
        WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu.download_coord_curier();
        foreach (WebApplication1.Models.driver_database.coord bliki in WebApplication1.Controllers.DRIVER_DATA_BASE.tekushiu.coordinati)
        {
            <div hidden class="data24214"><b>@bliki.data</b></div>
            <div hidden class="dolg434">@bliki.dolg</div>
            <div hidden class="shir232">@bliki.shir</div>
        }

    }


    else
    {
        <div>нет такого водителя</div>
    }
}




